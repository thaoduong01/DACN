@model IEnumerable<DACN_WEBQLNH.Models.Role>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div id="layoutSidenav_content">
    <main>
        <div class="container-fluid px-4">
            <h1 class="mt-4">Danh Sách Quyền Truy Cập</h1>
            <ol class="breadcrumb mb-4">
                <a asp-area="Admin" asp-controller="HomeAdmin" asp-action="Index" class="breadcrumb-item"><i class="fa-solid fa-house"></i>HomeAdmin</a>
                <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="AdminRoles" asp-action="Index">Quyền Truy Cập</a></li>
                <li class="breadcrumb-item active">Danh Sách Quyền Truy Cập</li>
            </ol>
            <div class="card mb-4">
                <div class="card-header">
                    <i class="fas fa-table me-1"></i>
                    Danh sách
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th scope="col">Roles ID</th>
                                    <th scope="col">Roles Name</th>
                                    <th scope="col">Mô Tả</th>
                                </tr>
                            </thead>
                            @if (Model != null)
                            {
                                @foreach (var item in Model)
                                {
                                    <tbody>
                                        <tr>
                                            <td>@item.RoleId</td>
                                            <td>@item.RoleName</td>
                                            <td>@item.MoTa</td>
                                            <td>
                                                <a class="btn btn-outline-success" asp-area="Admin" asp-action="Create" asp-route-id="@item.RoleId">Create</a>
                                                <a class="btn btn-outline-primary" asp-area="Admin" asp-action="Edit" asp-route-id="@item.RoleId">Edit</a>
                                                <a class="btn btn-outline-secondary" asp-area="Admin" asp-action="Details" asp-route-id="@item.RoleId">Details</a>
                                                <a class="btn btn-outline-success" asp-area="Admin" asp-action="Delete" asp-route-id="@item.RoleId">Delete</a>
                                            </td>
                                        </tr>

                                    </tbody>

                                }
                            }
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </main>

    <!--Footer-->
    <footer class="py-4 bg-light mt-auto">
        <div class="container-fluid px-4">
            <div class="d-flex align-items-center justify-content-between small">
                <div class="text-muted">Đồ Án Chuyên Ngành; Your Website 2022</div>
                <div>
                    <a href="#">Dương Ngọc Thảo</a>
                    &middot;
                    <a href="#">Lê Cẩm Thúy</a>
                </div>
            </div>
        </div>
    </footer>
</div>