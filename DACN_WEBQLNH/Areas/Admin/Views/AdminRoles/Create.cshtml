@model DACN_WEBQLNH.Models.Role

@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div id="layoutSidenav_content">
    <main>
        <div class="container-fluid px-4" style="text-align: center;">
            <h1 class="mt-4">Thêm Quyền Truy Cập</h1>
            <ol class="breadcrumb mb-4">
                <a asp-area="Admin" asp-controller="HomeAdmin" asp-action="Index" class="breadcrumb-item"><i class="fa-solid fa-house"></i>HomeAdmin</a>
                <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="AdminRoles" asp-action="Edit">Quyền Truy Cập</a></li>
                <li class="breadcrumb-item active">Chỉnh Sửa Thông Tin Quyền Truy Cập</li>
            </ol>
        </div>
        <form asp-action="Create" style="margin: auto; width: 80%; border: 3px solid black; padding: 20px;">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group" style="line-height: 3;">
                <label asp-for="RoleName">Role Name</label>
                <input type="text" class="form-control" asp-for="RoleName" placeholder="Tên Quyền Truy Cập">
                <span asp-validation-for="RoleName" class="text-danger"></span>
            </div>
            <div class="form-group" style="line-height: 3;">
                <label asp-for="MoTa">Mô Tả</label>
                <input type="text" class="form-control" asp-for="MoTa" placeholder="Mô Tả">
                <span asp-validation-for="MoTa" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-sm-10" style="line-height: 5; text-align: center;">
                    <button type="submit" class="btn btn-primary">Thêm Mới</button>
                </div>
                <div>
                    <a asp-action="Index">Trở Về</a>
                </div>
            </div>
        </form>
    </main>

    <!--Footer-->
    <footer class="py-4 bg-light mt-auto">
        <div class="container-fluid px-4">
            <div class="d-flex align-items-center justify-content-between small">
                <div class="text-muted">Đồ Án Chuyên Ngành; Your Website 2022</div>
                <div>
                    <a href="#">Dương Ngọc Thảo</a>
                    &middot;
                    <a href="#">Lê Cẩm Thúy</a>
                </div>
            </div>
        </div>
    </footer>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }
